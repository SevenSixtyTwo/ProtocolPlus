<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="DataGridRow" x:Key="ProtocolCard">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DataGridRow">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <Label Content="ass bitch niggers{Binding ProtocolFieldQuestion}"
                               Foreground="White"
                               Background="Aquamarine"
                               Grid.Row="0"/>

                        <TextBox BorderThickness="0"
                                 Background="blue"
                                 Padding="5"
                                 Foreground="#CFCFCF"
                                 Grid.Row="1"
                                 Text="bitch ass niggers{Binding ProtocolFieldAnswer}">
                        </TextBox>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary> 